<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="archtype"
        xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fileSets>
        <fileSet encoding="UTF-8">
            <directory>documents</directory>
            <includes>
                <include>**/*.</include>
                <include>**/*.name</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory/>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
    <modules>
        <module id="core" dir="core" name="core">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.mf</include>
                    </includes>
                </fileSet>
                <fileSet packaged="true" filtered="true" encoding="UTF-8">
                    <directory>src/main/kotlin</directory>
                    <includes>
                        <include>**/*.kt</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*.yaml</include>
                    </includes>
                </fileSet>
                <fileSet packaged="true"  filtered="true" encoding="UTF-8">
                    <directory>src/test/kotlin</directory>
                    <includes>
                        <include>**/*.kt</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="app" dir="app" name="app">
            <fileSets>
                <fileSet  filtered="true" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.yml</include>
                        <include>**/*.conf</include>
                        <include>**/*.sql</include>
                    </includes>
                </fileSet>
                <fileSet  packaged="true" filtered="true" encoding="UTF-8">
                    <directory>src/main/kotlin</directory>
                    <includes>
                        <include>**/*.kt</include>
                    </includes>
                </fileSet>
                <fileSet  filtered="true" encoding="UTF-8">
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*.yml</include>
                        <include>**/*.conf</include>
                    </includes>
                </fileSet>
                <fileSet  packaged="true" filtered="true" encoding="UTF-8">
                    <directory>src/test/kotlin</directory>
                    <includes>
                        <include>**/*.kt</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="infrastructure" dir="infrastructure" name="infrastructure">
            <fileSets>
            </fileSets>
            <modules>
                <module id="infrastructure-example" dir="example" name="infrastructure-example">
                    <fileSets>
                        <fileSet  filtered="true" encoding="UTF-8">
                            <directory>src/main/resources</directory>
                            <includes>
                                <include>**/*.yml</include>
                                <include>**/*.conf</include>
                                <include>**/*.sql</include>
                            </includes>
                        </fileSet>
                        <fileSet packaged="true"  filtered="true" encoding="UTF-8">
                            <directory>src/main/kotlin</directory>
                            <includes>
                                <include>**/*.kt</include>
                            </includes>
                        </fileSet>
                        <fileSet  filtered="true" encoding="UTF-8">
                            <directory>src/test/resources</directory>
                            <includes>
                                <include>**/*.yml</include>
                                <include>**/*.conf</include>
                            </includes>
                        </fileSet>
                        <fileSet  packaged="true" filtered="true" encoding="UTF-8">
                            <directory>src/test/kotlin</directory>
                            <includes>
                                <include>**/*.kt</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </module>
            </modules>
        </module>
    </modules>
</archetype-descriptor>
